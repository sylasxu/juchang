# ==========================================
# Juchang Application Environment Variables
# ==========================================

# Database Configuration
DATABASE_URL=postgresql://postgres:your_secure_password_here@localhost:5432/juchang

# Redis Configuration  
REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your_redis_password_here

# API Configuration
API_PORT=3000
API_HOST=0.0.0.0  # 监听地址：0.0.0.0 支持局域网访问，127.0.0.1 仅本机
API_BASE_URL=http://localhost:3000

# Vite 前端环境变量（需要 VITE_ 前缀才能在前端访问）
VITE_API_BASE_URL=http://localhost:3000

# WeChat Mini Program Configuration
WECHAT_APP_ID=your_wechat_app_id
WECHAT_APP_SECRET=your_wechat_app_secret

# AI Service Configuration (支持多 Provider)
AI_PROVIDER=deepseek  # 可选: deepseek, dashscope, openai

# DeepSeek (推荐，性价比高)
DEEPSEEK_API_KEY=your_deepseek_api_key
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# 通义千问 (备用)
# DASHSCOPE_API_KEY=your_dashscope_api_key
# DASHSCOPE_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# OpenAI (备用)
# OPENAI_API_KEY=your_openai_api_key
# OPENAI_BASE_URL=https://api.openai.com/v1

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760  # 10MB in bytes
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,webp

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Environment
NODE_ENV=development
DEBUG=true

# Docker Configuration (for local development)
POSTGRES_DB=juchang
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5432
REDIS_PORT=6379
