{
  "name": "@juchang/api",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/types.ts",
  "exports": {
    ".": {
      "types": "./src/types.ts",
      "default": "./src/index.ts"
    },
    "./types": {
      "types": "./src/types.ts",
      "default": "./src/types.ts"
    }
  },
  "scripts": {
    "dev": "bun run --watch --silent src/index.ts",
    "dev:verbose": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun dist/index.js",
    "test": "bun test",
    "test:pbt": "bun test --test-name-pattern 'Property'"
  },
  "dependencies": {
    "@ai-sdk/deepseek": "^2.0.2",
    "@ai-sdk/openai": "^3.0.13",
    "@elysiajs/cors": "^1.1.1",
    "@elysiajs/eden": "^1.4.5",
    "@elysiajs/jwt": "^1.1.0",
    "@elysiajs/openapi": "^1.1.0",
    "@juchang/db": "workspace:*",
    "@juchang/utils": "workspace:*",
    "ai": "^6.0.5",
    "chalk": "^5.6.2",
    "dotenv": "^17.2.3",
    "elysia": "^1.1.0",
    "jose": "^6.1.3",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3"
  },
  "devDependencies": {
    "@juchang/ts-config": "workspace:*",
    "@types/node": "^24.10.1",
    "fast-check": "^3.23.2",
    "typescript": "^5.9.3"
  }
}