<!--
  浮动按钮组件
  Requirements: 3.1, 3.2, 3.3, 3.4
-->
<view class="floating-container">
  <!-- 安全中心按钮 - 左上角 -->
  <view 
    wx:if="{{showSafety}}"
    class="floating-btn left-3" 
    style="top: {{navBarHeight}}px;"
    bindtap="onSafetyTap"
  >
    <t-icon name="shield" size="40rpx" color="#FF6B35" />
  </view>

  <!-- 定位按钮 - 右侧中间 -->
  <view 
    wx:if="{{showLocation}}"
    class="floating-btn location-btn" 
    bindtap="onLocationTap"
  >
    <t-icon name="location" size="40rpx" color="#FF6B35" />
  </view>
</view>
