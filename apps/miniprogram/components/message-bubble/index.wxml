<!--
  Message Bubble 组件
  Requirements: 15.6, 15.7
  
  消息气泡组件
  - 用户气泡样式（矢车菊蓝渐变 + 白色文字）
  - AI 气泡样式（透明背景 + 深灰文字）
-->
<view 
  class="message-bubble message-bubble--{{role}}"
  bindlongpress="onLongPress"
>
  <!-- 消息内容 -->
  <view class="bubble-content">
    <text class="bubble-text" user-select>{{content}}</text>
  </view>
  
  <!-- 时间戳 -->
  <view wx:if="{{showTimestamp && timestamp}}" class="bubble-timestamp">
    <text>{{timestamp}}</text>
  </view>
</view>
