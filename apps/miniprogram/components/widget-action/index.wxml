<!--
  Widget Action 组件 (Simple Widget)
  Requirements: Simple Widget Design, 快捷操作
  
  简单跳转按钮
  - label + icon + url
  - 支持三种样式变体：primary / secondary / ghost
-->

<!-- 普通按钮 -->
<view 
  wx:if="{{!openType}}"
  class="widget-action halo-card-mini action-{{variant}} {{disabled ? 'action--disabled' : ''}} btn-pressable"
  bindtap="onTap"
>
  <t-icon wx:if="{{icon}}" name="{{icon}}" size="32rpx" />
  <text class="action-label">{{label}}</text>
  <t-icon wx:if="{{url}}" name="chevron-right" size="28rpx" class="action-arrow" />
</view>

<!-- 带开放能力的按钮（如分享） -->
<button 
  wx:else
  class="widget-action halo-card-mini action-{{variant}} {{disabled ? 'action--disabled' : ''}} btn-pressable action-button"
  open-type="{{openType}}"
  disabled="{{disabled}}"
  bindtap="onShareTap"
>
  <t-icon wx:if="{{icon}}" name="{{icon}}" size="32rpx" />
  <text class="action-label">{{label}}</text>
</button>
