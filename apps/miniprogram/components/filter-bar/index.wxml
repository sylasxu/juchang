<!--
  Filter Bar 组件
  Requirements: 18.3
  
  横向滚动筛选栏
  - 筛选项：全部、美食、运动、桌游、娱乐
-->
<scroll-view class="filter-bar" scroll-x enhanced show-scrollbar="{{false}}">
  <view class="filter-list">
    <view 
      wx:for="{{filters}}" 
      wx:key="key"
      class="filter-item btn-pressable {{value === item.key ? 'filter-item--active' : ''}}"
      data-key="{{item.key}}"
      bindtap="onFilterTap"
    >
      <t-icon wx:if="{{item.icon}}" name="{{item.icon}}" size="28rpx" />
      <text class="filter-label">{{item.label}}</text>
    </view>
  </view>
</scroll-view>
