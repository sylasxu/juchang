<!--
  Widget Ask Preference 组件
  Requirements: 13.1, 13.2, 13.3, 13.4, 13.5
  
  多轮对话信息收集卡片
  - 显示 AI 询问的问题
  - 渲染选项按钮供用户快速选择
  - 支持"随便/都可以"跳过按钮
-->
<view class="widget-ask-preference halo-card {{disabled ? 'widget--disabled' : ''}}">
  <!-- 问题文本 -->
  <view class="question-section">
    <view class="question-icon icon-circle icon-circle--purple">
      <t-icon wx:if="{{questionType === 'location'}}" name="location" size="36rpx" />
      <t-icon wx:else name="app" size="36rpx" />
    </view>
    <text class="question-text">{{question}}</text>
  </view>
  
  <!-- 选项按钮列表 -->
  <view class="options-section">
    <view 
      wx:for="{{options}}" 
      wx:key="value"
      class="option-btn btn-pressable {{disabled ? 'option-btn--disabled' : ''}}"
      data-option="{{item}}"
      bindtap="onSelectOption"
    >
      <text class="option-label">{{item.label}}</text>
    </view>
  </view>
  
  <!-- 跳过按钮 -->
  <view 
    wx:if="{{allowSkip && !disabled}}"
    class="skip-section"
    bindtap="onSkip"
  >
    <text class="skip-text">都可以，你随便推荐 ✨</text>
  </view>
</view>
