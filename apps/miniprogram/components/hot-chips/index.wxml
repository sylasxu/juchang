<!--
  Hot Chips 组件
  Requirements: 3.1, 3.2, 3.3, 3.4
  
  横向滚动的热词列表
-->
<view class="hot-chips-container" wx:if="{{keywords.length > 0}}">
  <scroll-view class="hot-chips-scroll" scroll-x enable-flex>
    <view class="hot-chips-list">
      <view
        wx:for="{{keywords}}"
        wx:key="id"
        class="hot-chip"
        data-id="{{item.id}}"
        data-keyword="{{item.keyword}}"
        bindtap="onChipClick"
      >
        <text class="hot-chip-text">{{item.keyword}}</text>
      </view>
    </view>
  </scroll-view>
</view>
