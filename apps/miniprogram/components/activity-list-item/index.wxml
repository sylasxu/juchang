<!--
  Activity List Item 组件
  Requirements: 17.5, 18.6
  
  活动列表项
  - 显示活动标题、类型图标、距离、时间、地点
  - 用于 Widget_Explore 和沉浸式地图页
-->
<view class="activity-list-item btn-pressable" bindtap="onTap">
  <!-- 类型图标 -->
  <view class="item-icon icon-circle icon-circle-sm icon-circle--{{colorClass}}">
    <t-icon name="{{typeIcon}}" size="32rpx" />
  </view>
  
  <!-- 活动信息 -->
  <view class="item-content">
    <!-- 标题 -->
    <view class="item-title ellipsis">{{activity.title}}</view>
    
    <!-- 元信息 -->
    <view class="item-meta">
      <!-- 距离 -->
      <text wx:if="{{showDistance && formattedDistance}}" class="meta-distance">{{formattedDistance}}</text>
      
      <!-- 分隔符 -->
      <text wx:if="{{showDistance && formattedDistance}}" class="meta-separator">·</text>
      
      <!-- 时间 -->
      <text class="meta-time">{{formattedTime}}</text>
      
      <!-- 分隔符 -->
      <text class="meta-separator">·</text>
      
      <!-- 地点 -->
      <text class="meta-location ellipsis">{{locationText}}</text>
    </view>
  </view>
  
  <!-- 箭头 -->
  <view class="item-arrow">
    <t-icon name="chevron-right" size="32rpx" />
  </view>
</view>
