{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "lib": ["ES2018", "DOM"],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/api/*": ["./src/api/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/stores/*": ["./src/stores/*"],
      "@/types/*": ["./src/types/*"],
      "@/components/*": ["./src/components/*"]
    },
    "types": [
      "miniprogram-api-typings",
      "@types/wechat-miniprogram"
    ]
  },
  "include": [
    "src/**/*",
    "pages/**/*",
    "components/**/*",
    "subpackages/**/*",
    "custom-tab-bar/**/*",
    "app.ts",
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "miniprogram_npm"
  ]
}