{
  "pages": [
    "pages/home/index",
    "pages/profile/index",
    "pages/message/index"
  ],
  "usingComponents": {
    "t-toast": "tdesign-miniprogram/toast/toast",
    "t-message": "tdesign-miniprogram/message/message"
  },
  "subpackages": [
    {
      "root": "subpackages/activity",
      "name": "activity",
      "pages": [
        "detail/index",
        "create/index",
        "confirm/index",
        "draft-edit/index",
        "list/index",
        "explore/index",
        "map-picker/index"
      ]
    },
    {
      "root": "subpackages/legal",
      "name": "legal",
      "pages": ["index", "about/index"]
    },
    {
      "root": "subpackages/safety",
      "name": "safety",
      "pages": ["index"]
    },
    {
      "root": "pages/search",
      "name": "search",
      "pages": ["index"]
    },
    {
      "root": "pages/chat",
      "name": "chat",
      "pages": ["index"]
    },
    {
      "root": "pages/login",
      "name": "login",
      "pages": ["login"]
    },
    {
      "root": "pages/setting",
      "name": "setting",
      "pages": ["index"]
    }
  ],
  "window": {
    "backgroundTextStyle": "light",
    "navigationBarBackgroundColor": "#FAFBFC",
    "navigationBarTitleText": "聚场",
    "navigationBarTextStyle": "black",
    "navigationStyle": "custom",
    "backgroundColor": "#FAFBFC"
  },
  "darkmode": true,
  "themeLocation": "theme.json",
  "resolveAlias": {
    "~/*": "/*"
  },
  "sitemapLocation": "sitemap.json",
  "permission": {
    "scope.userLocation": {
      "desc": "你的位置信息将用于显示附近的活动"
    }
  },
  "requiredPrivateInfos": [
    "getLocation",
    "chooseLocation"
  ]
}
