{
  "pages": [
    "pages/map/index",
    "pages/message/index", 
    "pages/my/index"
  ],
  "usingComponents": {
    "t-toast": "tdesign-miniprogram/toast/toast"
  },
  "subpackages": [
    {
      "root": "subpackages/activity",
      "name": "activity",
      "pages": ["detail/index", "create/index", "confirm/index"]
    },
    {
      "root": "pages/search",
      "name": "search",
      "pages": ["index"]
    },
    {
      "root": "pages/my/info-edit",
      "name": "edit",
      "pages": ["index"]
    },
    {
      "root": "pages/chat",
      "name": "chat",
      "pages": ["index"]
    },
    {
      "root": "pages/login",
      "name": "login",
      "pages": ["login"]
    },
    {
      "root": "pages/loginCode",
      "name": "loginCode",
      "pages": ["loginCode"]
    },
    {
      "root": "pages/dataCenter",
      "name": "dataCenter",
      "pages": ["index"]
    },
    {
      "root": "pages/setting",
      "name": "setting",
      "pages": ["index"]
    },
    {
      "root": "pages/release",
      "name": "release",
      "pages": ["index"]
    }
  ],
  "window": {
    "backgroundTextStyle": "light",
    "navigationBarBackgroundColor": "#fff",
    "navigationBarTitleText": "聚场",
    "navigationBarTextStyle": "black"
  },
  "tabBar": {
    "custom": true,
    "list": [
      {
        "pagePath": "pages/map/index",
        "text": "地图"
      },
      {
        "pagePath": "pages/message/index", 
        "text": "消息"
      },
      {
        "pagePath": "pages/my/index",
        "text": "我的"
      }
    ]
  },
  "resolveAlias": {
    "~/*": "/*"
  },
  "sitemapLocation": "sitemap.json",
  "permission": {
    "scope.userLocation": {
      "desc": "你的位置信息将用于显示附近的活动"
    }
  }
}
