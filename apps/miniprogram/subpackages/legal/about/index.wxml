<!--
  关于聚场页面
  Requirements: 8.1, 8.2, 8.3, 8.4
-->
<view class="page bg-gray-50 min-h-screen">
  <!-- 自定义导航栏 -->
  <custom-navbar title="关于聚场" bind:back="onBack" />

  <!-- 页面内容 -->
  <view class="content px-4 pt-4">
    <!-- Logo 和版本信息 -->
    <view class="logo-section bg-white rounded-lg p-6 mb-4 flex flex-col items-center">
      <image 
        class="logo-image" 
        src="/static/logo.png" 
        mode="aspectFit"
      />
      <text class="text-lg font-bold text-gray-900 mt-3">聚场</text>
      <text class="text-sm text-gray-500 mt-1">v{{version}}</text>
      <text class="text-xs text-gray-400 mt-2">你的 AI 活动助理</text>
    </view>

    <!-- 微信群入口 -->
    <view class="qr-section bg-white rounded-lg p-4 mb-4">
      <view class="flex items-center mb-3">
        <text class="text-base font-medium text-gray-900">遇到问题？加入官方群</text>
      </view>
      <view class="qr-container flex flex-col items-center py-4">
        <image 
          class="qr-image" 
          src="{{qrCodeUrl}}" 
          mode="aspectFit"
          bindtap="onPreviewQrCode"
          bindlongpress="onSaveQrCode"
        />
        <text class="text-xs text-gray-400 mt-3">长按保存二维码，微信扫码加入</text>
      </view>
    </view>

    <!-- 法务链接 -->
    <t-cell-group class="mb-4">
      <t-cell 
        title="用户协议" 
        arrow 
        hover
        bindtap="onViewUserAgreement"
      />
      <t-cell 
        title="隐私政策" 
        arrow 
        hover
        bindtap="onViewPrivacyPolicy"
      />
    </t-cell-group>

    <!-- 版权信息 -->
    <view class="copyright text-center py-6">
      <text class="text-xs text-gray-400">© 2024 聚场 JuChang</text>
    </view>
  </view>
</view>
