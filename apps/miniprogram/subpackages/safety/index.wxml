<!--
  安全中心页面
  TDesign + Atomic Less 重构
-->
<view class="min-h-screen bg-gray-50 p-3">
  <!-- 安全须知 -->
  <view class="bg-white rounded-lg p-4 mb-3">
    <view class="text-lg font-semibold text-gray-900 mb-3">🛡️ 安全须知</view>
    <view>
      <view class="flex items-start py-2" wx:for="{{safetyTips}}" wx:key="index">
        <text class="text-success font-bold mr-2">✓</text>
        <text class="flex-1 text-sm text-gray-600 leading-normal">{{item}}</text>
      </view>
    </view>
  </view>

  <!-- 功能入口 -->
  <view class="bg-white rounded-lg p-4 mb-3">
    <view class="text-lg font-semibold text-gray-900 mb-3">🔧 安全功能</view>
    <view>
      <view class="menu-item flex items-center py-4 border-b border-gray-100" bindtap="onReportTap">
        <text class="text-xl mr-3">🚨</text>
        <text class="flex-1 text-base text-gray-900">举报问题</text>
        <text class="text-lg text-gray-300">›</text>
      </view>
      <view class="menu-item flex items-center py-4 border-b border-gray-100" bindtap="onEmergencyTap">
        <text class="text-xl mr-3">📞</text>
        <text class="flex-1 text-base text-gray-900">紧急联系</text>
        <text class="text-lg text-gray-300">›</text>
      </view>
      <view class="menu-item flex items-center py-4" bindtap="onBlacklistTap">
        <text class="text-xl mr-3">🚫</text>
        <text class="flex-1 text-base text-gray-900">黑名单管理</text>
        <text class="text-lg text-gray-300">›</text>
      </view>
    </view>
  </view>

  <!-- 底部提示 -->
  <view class="text-center text-xs text-gray-400 py-5">
    如遇紧急情况，请立即拨打110报警
  </view>
</view>
