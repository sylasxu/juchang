<!--
  安全中心页面
  Requirements: 21.1-21.7
-->
<view class="safety-container">
  <!-- 安全须知 -->
  <view class="section">
    <view class="section-title">🛡️ 安全须知</view>
    <view class="tips-list">
      <view class="tip-item" wx:for="{{safetyTips}}" wx:key="index">
        <text class="tip-icon">✓</text>
        <text class="tip-text">{{item}}</text>
      </view>
    </view>
  </view>

  <!-- 功能入口 -->
  <view class="section">
    <view class="section-title">🔧 安全功能</view>
    <view class="menu-list">
      <view class="menu-item" bindtap="onReportTap">
        <text class="menu-icon">🚨</text>
        <text class="menu-text">举报问题</text>
        <text class="menu-arrow">›</text>
      </view>
      <view class="menu-item" bindtap="onEmergencyTap">
        <text class="menu-icon">📞</text>
        <text class="menu-text">紧急联系</text>
        <text class="menu-arrow">›</text>
      </view>
      <view class="menu-item" bindtap="onBlacklistTap">
        <text class="menu-icon">🚫</text>
        <text class="menu-text">黑名单管理</text>
        <text class="menu-arrow">›</text>
      </view>
    </view>
  </view>

  <!-- 底部提示 -->
  <view class="footer-tip">
    如遇紧急情况，请立即拨打110报警
  </view>
</view>
